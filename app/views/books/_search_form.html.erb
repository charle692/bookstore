<%= form_tag search_path, :method => 'get' do %>
  <div class="search">
    <div class="small-9 medium-4 large-4 large-push-2 columns">
      <%= text_field_tag
       :search, params[:search],
        id: 'search_input',
         placeholder: 'Title, Author, Category',
          title: 'Enter your search query in here.' %>
    </div>

    <div class="small-1 small-pull-2 medium-1 medium-pull-1
     large-1 large-pull-2 columns">  
      <%= submit_tag "Search",
       class: 'button small',
        id: 'search_button' %>
    </div>
  </div>
<% end %>
