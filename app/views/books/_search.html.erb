<%= form_tag search_path, :method => 'get' do %>
  <div class="search">
    <div class="row">
        
        <div class="medium-centered medium-push-1 columns">
          
        <div class="small-9 columns">
          <%= text_field_tag :search, params[:search], id: 'search_input',
          placeholder: 'Title, Author, Category' %>
        </div>

         <div class="small-1 small-pull-2 columns">
           <%= submit_tag "Search", class: 'button small', id: 'search_button' %>
         </div>
        </div>
    </div>
  </div>
<% end %>
