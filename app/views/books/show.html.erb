<%= render 'search' %>

<div class="container">
	<div class="row">
		<div class="medium-4 medium-push-1 columns">
			<%= image_tag "#{@book.isbn}.jpg", alt: 'Book Cover', class:'big_book_cover' %>

			<div class="row" id="book_properties">
				<div class="medium-12 columns">
					<h2>Product Details</h2>
					<p>
						<strong>Publisher:</strong>
						<%= @book.publisher %>
					</p>

					<p>
						<strong>ISBN:</strong>
						<%= @book.isbn %>
					</p>

					<% if is_admin? %>
						<%= link_to 'Edit Book', edit_book_path(@book) %>
						<%= link_to 'Delete Book', book_path(@book), method: :delete, data: { confirm: "Are you sure you want to remove this book?"} %>
					<% end %>

				</div>
			</div>
		</div>

		<div class="medium-8 medium-push-1 columns">
				<div id="book_info_container">

				<h2><%= @book.title %></h2>
				<ul id='show_book_info'>
					<li>
						<strong>by:</strong> <%= link_to @book.author, search_path(search: @book.author) %>
					</li>
					<li>
						<strong>category:</strong>
						<%= link_to @book.category, search_path(search: @book.category) %>
					</li>
				</ul>

				<p class="price">
					$<%= @book.price %>
				<p>

				<p>
					<%= link_to 'Add to Cart', '#', class: 'button' %>
				</p>

				<strong>Summary</strong>
				<div id="book_show_summary">
					<%= @book.summary %>
				</div>
			</div>
		</div>
	</div>
</div>
