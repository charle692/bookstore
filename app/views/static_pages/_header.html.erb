<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">

    <li class="name">
      <h1> <%= link_to 'Bookstore', root_path %></h1>
    </li>

    <li class="toggle-topbar menu-icon">
      <a href="#"></a>
    </li>

  </ul>

  <section class="top-bar-section">
    <ul class="right">

      <% if user_signed_in? %>
        <li>
          <%= link_to 'Sign Out',
                        destroy_user_session_path,
                        data: {method: :delete} %>
        </li>

        <% if is_admin? %>
          <li>
            <%= link_to 'Add a new Book', new_book_path %>
          </li>
        <% end %>
      <% end %>

      <li><%= link_to 'Help', help_path %></li>
      <li id="cart_link"><%= link_to 'Cart ( 2 )', '#' %></li>
    </ul>

    <ul id="search_list">
      <li class="has-form">
        <%= form_tag search_path, :method => 'get' do %>
          <div class="search">
            <div class="row">

              <div class="medium-10 medium-push-7 columns">
                <%= text_field_tag :search, params[:search], id: 'search_input',
                placeholder: 'Title, Author, Category' %>
              </div>

               <div class="medium-2 medium-push-6 columns">
                 <%= submit_tag "Search", class: 'button small', id: 'search_button' %>
               </div>
            </div>
          </div>
        <% end %>
      </li>
    </ul>

    <div id="cart">
      <%= render partial: "books/cart" %>
    </div>

  </section>
</nav>
