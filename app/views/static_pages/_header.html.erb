<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">

    <li class="name">
      <h1> <%= link_to 'Bookstore', root_path %></h1>
    </li>

    <li class="toggle-topbar menu-icon">
      <a href="#"><span></span></a>
    </li>

  </ul>

  <section class="top-bar-section">

    <ul class="right">

      <% if user_signed_in? %>
        <li>
          <%= link_to 'Sign Out',
                        destroy_user_session_path,
                        data: {method: :delete} %>
        </li>

        <% if is_admin? %>
          <li>
            <%= link_to 'Add a new Book', new_book_path %>
          </li>
        <% end %>
      <% end %>

      <li><%= link_to 'Help', help_path %></li>
      <li id="cart_link"><%= link_to 'Cart ( 2 )', '#' %></li>
    </ul>

    <div id="cart">
      <%= render partial: "books/cart" %>
    </div>

    <%= form_tag search_path, :method => 'get' do %>
      <div class="search">
        <div class="small-9 medium-4 large-4 large-push-2 columns">
          <%= text_field_tag :search, params[:search], id: 'search_input',
          placeholder: 'Title, Author, Category' %>
        </div>

        <div class="small-1 small-pull-2 medium-1 medium-pull-1 large-1 large-pull-2 columns">  
          <%= submit_tag "Search", class: 'button small', id: 'search_button' %>
        </div>
      </div>
    <% end %>

  </section>
</nav>
